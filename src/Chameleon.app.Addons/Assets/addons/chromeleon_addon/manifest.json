{
  "version": "2024.1.7.0",
  "manifest_version": 3,
  "offline_enabled": true,
  "name": "Chromeleon Defender",
  "description": "Defender against fingerprinting.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "debugger",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "notifications",
    "privacy",
    "storage",
    "scripting",
    "tabs",
    "webNavigation",
    "webRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "_execute_action": {}
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "64": "data/icons/icon_32x32_2x.png",
    "128": "data/icons/icon_128x128.png"
  },
  "options_ui": {
    "page": "/data/options/options.html"
  },
  "action": {
    "default_popup": "data/popup/popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "world": "ISOLATED",
      "all_frames": true,
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "run_at": "document_start",
      "match_origin_as_fallback": true,
      "js": ["data/scripts/isolated.js"]
    },
    {
      "world": "MAIN",
      "all_frames": true,
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "run_at": "document_start",
      "match_origin_as_fallback": true,
      "js": ["data/scripts/main.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "modules/*.js",
        "data/scripts/isolated.js",
        "spoof-script.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
